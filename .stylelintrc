{
    "extends": "stylelint-config-standard",
    "rules": {
        "color-hex-case": "upper",
        "color-hex-length": "long",
        "font-family-no-missing-generic-family-keyword": null,
        "selector-type-no-unknown": [
            true,
            {
                "ignoreTypes": [
                    "page",
                    "view",
                    "scroll-view",
                    "swiper",
                    "movable-area",
                    "movable-view",
                    "cover-view",
                    "text",
                    "image",
                    "navigator"
                ]
            }
        ],
        "unit-no-unknown": [
            true,
            {
                "ignoreUnits": [
                    "rpx"
                ]
            }
        ],
        "block-no-empty": null,
        "color-no-invalid-hex": true,
        "comment-empty-line-before": [
            "always",
            {
                "ignore": [
                    "stylelint-commands",
                    "after-comment"
                ]
            }
        ],
        "declaration-colon-space-after": "always",
        "indentation": [
            4
        ],
        "max-empty-lines": 2,
        "rule-empty-line-before": [
            "always",
            {
                "except": [
                    "first-nested"
                ],
                "ignore": [
                    "after-comment"
                ]
            }
        ],
        "unit-whitelist": [
            "em",
            "rem",
            "%",
            "px",
            "ms",
            "s",
            "deg",
            "rpx",
            "pt",
            "vw",
            "vh"
        ]
    }
}
